# Database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NextAuth
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Configuration (for password reset) - REQUIRED for forgot password functionality
# SendGrid Configuration (Production Ready)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# SendGrid Sender Configuration
SMTP_FROM_NAME=Tarana.ai
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Weather API (Server-side only - DO NOT use NEXT_PUBLIC prefix)
OPENWEATHER_API_KEY=your_openweather_api_key

# AI/ML APIs
GOOGLE_GEMINI_API_KEY=your_gemini_api_key

# TomTom API (for route optimization and traffic data)
TOMTOM_API_KEY=your_tomtom_api_key

# Admin/Security
REINDEX_SECRET=your_secure_reindex_secret_token

# Alternative SMTP Providers:
# Gmail (Development only):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Outlook/Hotmail:
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USER=your_email@outlook.com
# SMTP_PASS=your_password

# Custom SMTP:
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASS=your_smtp_password
